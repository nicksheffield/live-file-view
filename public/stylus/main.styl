*
	box-sizing border-box

body
	background #eee
	color #000
	font-family 'Open Sans', 'Helvetica Neue', Helvetica
	margin 0
	
header
	background #222
	color #fff
	padding 1em
	
	h1
		margin 0
	
.file-nav
	padding 0
	margin 0
	width 200px
	background #fff
	padding 1em
	font-family 'Source Code Pro', consolas, monospace
	font-size 0.8em
	
	&, ul
		list-style none
		
	ul
		padding 0 0 0 1.2em
	
	ul, li
		margin 0.3em 0
	
	li
		background #fff
		border-radius 3px
		user-select none
		cursor pointer
		
		i.fa
			margin-right 0.5em
			display inline-block
			width 0.5em
			text-align center