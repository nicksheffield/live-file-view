highlight = dodgerblue

*
	box-sizing border-box

body
	background #272822
	color #fff
	font-family 'Source Code Pro' !important
	margin 0
	-webkit-font-smoothing antialiased

[layout~="full-col"]
	height 100vh
	max-height 100vh

header
	background #222
	color #fff
	padding 1em
	
	h1
		margin 0
	
.file-nav
	padding 1em 0 0
	margin 0
	width 200px
	min-width 200px
	background #222
	font-size 0.8em
	font-weight 700
	overflow scroll
	
	&, ul
		list-style none
	
	ul
		padding 0
		
	.directory .name
		color #7dcac1
		
	.file .name
		color #5b7a8a
	
	.name
		display block
		cursor pointer
		padding 0.7em 0
		border-left 2px solid transparent
		white-space nowrap
		height 35px
		position relative
		z-index 2
			
		&:before, &:after
			position absolute
			content ''
			display block
			top 0
			right 100%
			width 100px
			height 35px
			z-index -1
		
		&:after
			right auto
			left 100%
		
		&:hover
			background #333
			
			&:before, &:after
				background #333
		
		&.current
			// border-left-color highlight
			color #fff
			background highlight
			
			&:before, &:after
				background highlight
	
	li
		border-radius 3px
		user-select none
		padding-left 1.4em
		position relative
		
		i.fa
			margin-right 0.5em
			display inline-block
			width 0.5em
			text-align center
			
		
	
.content
	overflow scroll
	
pre
	font-weight 600
	padding 1em
	margin .5em 0

pre, code
	font-size 14px
	text-shadow none !important

code[class*="language-"], pre[class*="language-"]
	font-family 'Source Code Pro'

.line-numbers .line-numbers-rows
	border-right 0
	
.no-file-chosen
	color rgba(255, 255, 255, 0.1)
	font-weight 200
	font-size 3em
	
.prism-previewer-color, .prism-previewer-gradient
	margin-left -70px
	margin-top -60px
