*
	box-sizing border-box

body
	background #272822
	color #fff
	font-family 'Open Sans', 'Helvetica Neue', Helvetica
	margin 0
	-webkit-font-smoothing antialiased
	
header
	background #222
	color #fff
	padding 1em
	
	h1
		margin 0
	
.file-nav
	padding 0
	margin 0
	width 200px
	background #222
	padding 1em
	font-family 'Source Code Pro', consolas, monospace
	font-size 0.8em
	
	&, ul
		list-style none
	
	li
		padding 1em 0 0
		
	ul
		padding 0 0 0 2em
	
	ul, li
		margin 1em 0
	
	li
		border-radius 3px
		user-select none
		cursor pointer
		
		i.fa
			margin-right 0.5em
			display inline-block
			width 0.5em
			text-align center