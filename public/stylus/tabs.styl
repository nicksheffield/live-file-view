.tabs
	background navbg
	font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
	font-weight bold
	border-bottom 5px solid lighten(navbg, 15%)
	
	.tab
		max-width 30%
		padding 0 1.5em
		height 50px
		line-height 50px
		font-size 0.8em
		background lighten(navbg, 5%)
		overflow hidden
		border-right 1px solid lighten(navbg, 15%)
		cursor pointer
		color rgba(255, 255, 255, 0.5)
		position relative
		
		&.current, &:hover
			color #fff
			background lighten(navbg, 10%)
		
		&:hover
			.close-btn
				transform scale(1)
		
		&.changed
			color changed-color
			animation glow 1s infinite
			
		.close-btn
			transform scale(0)
			position absolute
			top calc(50% - 1em + (pad * 2))
			right 1em
			background rgba(0, 0, 0, 0)
			border 0
			transition transform 0.2s ease
			outline 0
			padding 0
			
			i.fa
				color #fff
				text-shadow 0 0 10px #000
				font-size 1.5em